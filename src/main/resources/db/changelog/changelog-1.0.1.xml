<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="add-is-disable-to-person" author="kuznee">
        <addColumn tableName="person">
            <column name="is_disabled" type="boolean" defaultValue="false">
                <constraints nullable="false"/>
            </column>
        </addColumn>
    </changeSet>
    <changeSet id="modify-datatype-for_price" author="kuznee">
        <modifyDataType tableName="product" columnName="price" newDataType="numeric(10,2)"/>
    </changeSet>

    <changeSet id="add-order-id-to-cart" author="kuznee">
        <addColumn tableName="cart">
            <column name="order_id" type="int">
                <constraints foreignKeyName="order_id" references="order(id)"/>
            </column>
        </addColumn>
    </changeSet>

    <changeSet id="rename-order-table" author="kuznee">
        <renameTable oldTableName="order" newTableName="person_order"/>
    </changeSet>
</databaseChangeLog>